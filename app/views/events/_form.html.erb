<%= form_with(model: event) do |form| %>
  <% if event.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>
      <ul>
        <% event.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group">
    <%= form.label :title, style: "display: block" %>
    <%= form.text_field :title, class: 'form-control' %>
  </div>
  <div class="form-group mt-3">
    <%= form.label :description, style: "display: block" %>
    <%= form.text_field :description, class: 'form-control' %>
  </div>
  <div class="form-group mt-3">
    <%= form.label :start_time, style: "display: block" %>
    <%= form.datetime_field :start_time, class: 'form-control' %>
  </div>
  <div class="form-group mt-3">
    <%= form.label :end_time, style: "display: block" %>
    <%= form.datetime_field :end_time, class: 'form-control' %>
  </div>
  <div class="form-group mt-3">
    <%= form.label :department_id, style: "display: block" %>
    <%= form.select(:department_id, options_for_select(Department.options_list), {}, class: 'form-select') %>
  </div>
  <div class="form-group mt-3">
    <%= form.submit class: 'btn btn-primary' %>
  </div>
<% end %>

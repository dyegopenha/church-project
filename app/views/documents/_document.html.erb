<div id="<%= dom_id document %>">
  <p>
    <strong>File:</strong>
    <%= link_to document.file.filename, document.file if document.file.attached? %>
  </p>

  <p>
    <strong>Department:</strong>
    <%= document.department_id %>
  </p>

  <p>
    <strong>When:</strong>
    <%= document.when %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= document.description %>
  </p>

</div>

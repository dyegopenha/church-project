<%= form_with(model: document) do |form| %>
  <% if document.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(document.errors.count, "error") %> prohibited this document from being saved:</h2>
      <ul>
        <% document.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group">
    <%= form.label :file, style: "display: block" %>
    <%= form.file_field :file, class: 'form-control' %>
  </div>
  <div class="form-group mt-3">
    <%= form.label :department_id, style: "display: block" %>
    <%= form.select(:department_id, options_for_select(Department.options_list), {}, class: 'form-select') %>
  </div>
  <div class="form-group mt-3">
    <%= form.label :title, style: "display: block" %>
    <%= form.text_field :title, class: 'form-control' %>
  </div>
  <div class="form-group mt-3">
    <%= form.label :when, style: "display: block" %>
    <%= form.date_field :when, class: 'form-control' %>
  </div>
  <div class="form-group mt-3">
    <%= form.label :description, style: "display: block" %>
    <%= form.text_area :description, class: 'form-control' %>
  </div>
  <div class="form-group mt-3">
    <%= form.submit class: 'btn btn-primary' %>
  </div>
<% end %>

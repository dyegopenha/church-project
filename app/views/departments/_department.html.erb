<div id="<%= dom_id department %>">
  <%= image_tag department.avatar, width: '100', class: 'mx-auto d-block' if department.avatar.attached? %>
  <div class="form-group mt-3">
    <label for="name"><strong>Name</strong></label>
    <input class="form-control" type="text" id="name" value="<%= department.name %>" readonly>
  </div>
  <div class="form-group mt-3">
    <label for="description"><strong>Description</strong></label>
    <input class="form-control" type="text" id="description" value="<%= department.description %>" readonly>
  </div>
  <p class="mt-3">
    <strong>Associated users:</strong>
    <%= department.users.count %>
  </p>
  <% if department.users.count > 0 %>
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Name</th>
          <th>Age</th>
          <th>Phone</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% department.users.each do |user| %>
          <tr>
            <td><%= user.name %></td>
            <td><%= user.age %></td>
            <td><%= user.phone %></td>
            <td><%= link_to "Show", user, class: 'btn btn-outline-info' %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% end %>
</div>

<%= form_with(model: payment) do |form| %>
  <% if payment.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(payment.errors.count, "error") %> prohibited this payment from being saved:</h2>
      <ul>
        <% payment.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group">
    <%= form.label :amount, style: "display: block" %>
    <%= form.text_field :amount, class: 'form-control' %>
  </div>
  <div class="form-group mt-3">
    <%= form.label :kind, style: "display: block" %>
    <%= form.select(:kind, options_for_select(Payment.options_for_kind), {}, class: 'form-select') %>
  </div>
  <div class="form-group mt-3">
    <%= form.label :favored, style: "display: block" %>
    <%= form.text_field :favored, class: 'form-control' %>
  </div>
  <div class="form-group mt-3">
    <%= form.label :when, style: "display: block" %>
    <%= form.date_field :when, class: 'form-control' %>
  </div>
  <div class="form-group mt-3">
    <%= form.label :file, style: "display: block" %>
    <%= form.file_field :file, class: 'form-control' %>
  </div>
  <div class="form-group mt-3">
    <%= form.label :description, style: "display: block" %>
    <%= form.text_area :description, class: 'form-control' %>
  </div>
  <div class="form-group mt-3">
    <%= form.submit class: 'btn btn-primary' %>
  </div>
<% end %>
